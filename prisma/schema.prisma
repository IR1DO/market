generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "foreignKeys"
}

model Product {
  id               Int               @id @default(autoincrement())
  name             String            @unique @db.VarChar(255)
  price            Decimal           @db.Decimal(10, 2)
  stock_quantity   Int               @db.Int
  wastage_quantity Int               @db.Int
  alert_threshold  Int               @default(10) @db.Int
  created_at       DateTime          @default(now())
  updated_at       DateTime          @updatedAt
  sales            ProductsOfSales[]
}

model Sale {
  id           Int               @id @default(autoincrement())
  sales_amount Decimal           @db.Decimal(10, 2)
  sales_date   DateTime          @default(now())
  products     ProductsOfSales[]
}

model ProductsOfSales {
  sale       Sale     @relation(fields: [sale_id], references: [id])
  sale_id    Int      @db.Int
  product    Product  @relation(fields: [product_id], references: [id])
  product_id Int      @db.Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@id([sale_id, product_id])
  @@map("products_of_sales")
}
